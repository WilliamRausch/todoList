CREATE TABLE todoList(
id SERIAL PRIMARY KEY,
title VARCHAR(255) NOT NULL,
details TEXT,
priority INTEGER NOT NULL DEFAULT 1,
created_at TIMESTAMP NOT NULL,
completed_at TIMESTAMP);

